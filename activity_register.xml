<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/images"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.shakti.Register">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call Women Helpline"
        android:padding="20dp"
        android:onClick="CallHelpline"
        android:layout_margin="20dp"
        android:textColor="#7C4DFF"
        android:background="#00E676"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See Trusted Contacts"
        android:padding="20dp"
        android:onClick="DisplayContact"
        android:layout_margin="20dp"
        android:textColor="#7C4DFF"
        android:background="#00E676"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book a cab"
        android:padding="20dp"
        android:onClick="BookCab"
        android:layout_margin="20dp"
        android:textColor="#7C4DFF"
        android:background="#00E676"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In trouble ?"
        android:padding="20dp"
        android:onClick="trouble"
        android:layout_margin="20dp"
        android:textColor="#512DA8"
        android:background="#E65100"/>

</LinearLayout>
